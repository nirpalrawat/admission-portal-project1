<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Register</title>

    <!-- CSS Link -->
    <link rel="stylesheet" href="css/style.css" />

    <!-- Bootstrap Link -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <!-- Login -->
    <section id="login" class="my-5">
      <div class="container">
        <div class="row">
          <!-- Column-1 -->
          <div class="col-lg-6">
            <img
              class="w-100"
              src="./Images/registration pp.jpg"
              alt="College Students Image-1"
              height="100%"
              style="
                border-top-left-radius: 7rem;
                border-bottom-right-radius: 7rem;
                box-shadow: 1px 1px 7px 10px #f30101;
                border: solid 3px blue;
              "
            />
          </div>
          <div class="col-md-1"></div>
          <!-- End Column-1 -->

          <!-- Column-2 -->
          <div class="col-lg-5 bglogin p-4">
            <form action="/insertstudent" method="post" enctype="multipart/form-data">
              <!-- logo -->
              <center>
                <img
                  class="mb-4 rounded-circle"
                  src="./Images/register-logo.jpg"
                  alt="logo"
                  width="20%"
                  height="20%"
                />
              </center>

              <!-- Heading (Login) -->
              <h1 class="mb-5 text-center">Register</h1>

              <% if(message.length > 0){ %>
                <div class="alert alert-danger">
                  <!-- To Print -->
                  <%= message %>
                </div>
                <% } %>
                
                <% if(msg.length > 0){ %>
                  <div class="alert alert-success">
                    <!-- To Print -->
                    <%= msg %>
                  </div>
                  <% } %>

              <!-- Email -->
              <div class="row mb-3">
                <div
                  class="col-lg-2 text-center bg-secondary rounded text-light fw-light my-auto p-2"
                >
                Full Name
                </div>

                <div class="col-lg-10">
                  <input
                  type="text"
                  class="form-control"
                  id="name"
                  name="name"
                  required
                  />
                </div>
              </div>

              <!-- Password -->
              <div class="row mb-3">
                <div
                  class="col-lg-2 text-center bg-secondary rounded text-light fw-light my-auto p-2"
                >
                Email address
                </div>

                <div class="col-lg-10">
                  <input
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                  required
                  />
                </div>
              </div>

              <div class="row mb-3">
                <div
                  class="col-lg-2 text-center bg-secondary rounded text-light fw-light my-auto p-2"
                >
                Password
                </div>

                <div class="col-lg-10">
                  <input
                  type="password"
                  class="form-control"
                  id="password"
                  name="password"
                  required
                  />
                </div>
              </div>

              <div class="row mb-3">
                <div
                  class="col-lg-2 text-center bg-secondary rounded text-light fw-light my-auto p-2"
                >
                Confirm Password
                </div>

                <div class="col-lg-10">
                  <input
                  type="password"
                  class="form-control"
                  id="password"
                  name="confirmpassword"
                required
                  />
                </div>
              </div>

              <div class="row mb-3">
                <div
                  class="col-lg-2 text-center bg-secondary rounded text-light fw-light my-auto p-2"
                >
                Image
                </div>

                <div class="col-lg-10">
                  <input
                    class="form-control"
                    name="image"
                    type="file"
                    required
                  />
                </div>
              </div>


              <!-- Button (Login) -->
              <center>
                <button type="submit" class="btn btn-primary mb-5 btn-lg">
                  Register
                </button>
              </center>

              
            </form>
          </div>
          <!-- End Column-2 -->
        </div>
      </div>
    </section>
    
    <!-- Java Script Link -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
