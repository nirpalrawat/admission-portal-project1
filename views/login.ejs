<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Login</title>

    <!-- CSS Link -->
    <link rel="stylesheet" href="css/style.css" />

    <!-- Bootstrap Link -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>

  <body>
    <!-- Login -->
    <section id="login" class="my-5">
      <div class="container">
        <div class="row">
          <!-- Column-1 -->
          <div class="col-lg-6">
            <img
              class="w-100"
              src="https://cdn.prod.website-files.com/6410ebf8e483b5bb2c86eb27/6503f3d0f4a33ae22abf8c71_ABM%20college%20software%20dev%20main.jpg"
              alt="College Students Image-1"
              height="100%"
              style="
                border-top-left-radius: 7rem;
                border-bottom-right-radius: 7rem;
                box-shadow: 1px 1px 7px 10px #f30101;
                border: solid 3px blue;
              "
            />
          </div>
          <div class="col-md-1"></div>
          <!-- End Column-1 -->

          <!-- Column-2 -->
          <div class="col-lg-5 bglogin p-4">
            <form action="/verifyLogin" method="post">
              <!-- logo -->
              <center>
                <img
                  class="mb-4 rounded-circle"
                  src="https://img.favpng.com/20/22/1/button-computer-icons-login-image-illustration-png-favpng-vx8jBdCk93jyFfFM1bHVcc7qZ.jpg"
                  alt="logo"
                  width="20%"
                  height="20%"
                />
              </center>

              <!-- Heading (Login) -->
              <h1 class="mb-5 text-center">LOGIN</h1>

              <% if(message.length > 0){ %>
              <div class="alert alert-success">
                <!-- To Print -->
                <%= message %>
              </div>
              <% } %> <% if(msg.length > 0){ %>
              <div class="alert alert-danger">
                <!-- To Print -->
                <%= msg %>
              </div>
              <% } %>

              <!-- Email -->
              <div class="row mb-3">
                <div
                  class="col-lg-2 text-center bg-secondary rounded text-light fw-light my-auto p-2"
                >
                  Email
                </div>

                <div class="col-lg-10">
                  <input
                    class="form-control"
                    name="email"
                    type="email"
                    placeholder="name@example.com"
                    required
                  />
                </div>
              </div>

              <!-- Password -->
              <div class="row mb-5">
                <div
                  class="col-lg-2 text-center bg-secondary rounded text-light fw-light my-auto p-2"
                >
                  password
                </div>

                <div class="col-lg-10">
                  <input
                    class="form-control"
                    name="password"
                    type="password"
                    required
                  />
                </div>
              </div>

              <!-- Button (Login) -->
              <center>
                <button type="submit" class="btn btn-primary mb-5 btn-lg">
                  Login
                </button>
              </center>

              <!-- Register Now -->
              <center>
                <p class="text-uppercase fw-light">
                  Don't have an account? &nbsp;<a href="/register"
                    >Register Now</a
                  >
                </p>

                <a href="#" data-bs-toggle="modal" data-bs-target="#Forgot"
                  >Forgot Password</a
                >
              </center>
            </form>
          </div>
          <!-- End Column-2 -->
        </div>
      </div>
    </section>
    <!-- End Login -->

    <!--Forgot Password -->
    <div
      class="modal fade"
      id="Forgot"
      tabindex="-1"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
    >
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h1 class="modal-title fs-5" id="exampleModalLabel">
              Forget Password
            </h1>

            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
              aria-label="Close"
            ></button>
          </div>
          <div class="modal-body">
            <form action="/forgot_Password" method="post">
              <div class="mb-3">
                <label for="">Email</label>
                <input type="text" name="email" class="form-control" />
              </div>

              <button type="submit" class="btn btn-success">Submit</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <!--End Btech Modal -->

    <!-- Java Script Link -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
