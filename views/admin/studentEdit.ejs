<%- include('./header.ejs')%> <%- include('./sidebar.ejs')%>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0 text-dark">Dashbord</h1>
        </div>
        <!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">student</a></li>
            <li class="breadcrumb-item active">Edit</li>
          </ol>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->

  <!-- Main content -->
  <div class="content">
    <div class="container">
      <div class="row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
          <form action="/admin/studentUpdate/<%= d._id %>" method="post">
            <div class="form-group">
              <label for="">name</label>
              <input
                type="text"
                value="<%= d.name%> "
                name="name"
                id=""
                class="form-control"
              />
            </div>
            <div class="form-group">
              <label for="">Email</label>
              <input
                type="text"
                value="<%= d.email%>"
                name="email"
                id=""
                class="form-control"
              />
            </div>
            <div class="form-group">
              <label for="">Password</label>
              <input
                type="text"
                value=" <%= d.password %>"
                name="password"
                id=""
                class="form-control"
              />
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
          </form>
        </div>
        <div class="col-md-4"></div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </div>
  <!-- /.content -->
</div>
<!-- /.content-wrapper -->

<%- include('./footer.ejs')%>
